  <h1>Omex - Welcome Embed Editor</h1>

  <div class="container">
    <form id="embedForm" autocomplete="off" spellcheck="false">
      <label for="title">Title</label>
      <input type="text" id="title" placeholder="Enter embed title" />

      <label for="description">Description</label>
      <textarea id="description" rows="4" placeholder="Enter embed description"></textarea>

      <label for="url">URL (optional)</label>
      <input type="text" id="url" placeholder="https://example.com" />

      <label for="image">Image URL (optional)</label>
      <input type="text" id="image" placeholder="https://example.com/image.png" />

      <button type="submit">Done</button>
    </form>

    <div class="embed-preview" id="embedPreview" aria-live="polite" aria-label="Embed preview">
      <div class="embed-title" id="previewTitle">Embed Title</div>
      <div class="embed-description" id="previewDescription">Embed description will appear here...</div>
      <a href="#" target="_blank" rel="noopener noreferrer" class="embed-url" id="previewUrl" style="display:none;">Link</a>
      <img src="" alt="Embed Image" class="embed-image" id="previewImage" style="display:none;" />
    </div>
  </div>

  <script>
    const titleInput = document.getElementById('title');
    const descInput = document.getElementById('description');
    const urlInput = document.getElementById('url');
    const imageInput = document.getElementById('image');

    const previewTitle = document.getElementById('previewTitle');
    const previewDesc = document.getElementById('previewDescription');
    const previewUrl = document.getElementById('previewUrl');
    const previewImage = document.getElementById('previewImage');

    // Update preview live
    function updatePreview() {
      const title = titleInput.value.trim();
      const desc = descInput.value.trim();
      const url = urlInput.value.trim();
      const image = imageInput.value.trim();

      previewTitle.textContent = title || 'Embed Title';
      previewDesc.textContent = desc || 'Embed description will appear here...';

      if (url) {
        previewUrl.style.display = 'block';
        previewUrl.href = url;
        previewUrl.textContent = url;
      } else {
        previewUrl.style.display = 'none';
        previewUrl.href = '#';
        previewUrl.textContent = '';
      }

      if (image) {
        previewImage.style.display = 'block';
        previewImage.src = image;
      } else {
        previewImage.style.display = 'none';
        previewImage.src = '';
      }
    }

    // Initial preview update
    updatePreview();

    // Event listeners
    titleInput.addEventListener('input', updatePreview);
    descInput.addEventListener('input', updatePreview);
    urlInput.addEventListener('input', updatePreview);
    imageInput.addEventListener('input', updatePreview);

    // Form submit
    document.getElementById('embedForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const payload = {
        title: titleInput.value.trim(),
        description: descInput.value.trim(),
        url: urlInput.value.trim(),
        image: imageInput.value.trim(),
      };

      if (!payload.title && !payload.description) {
        alert('Please add at least a title or description.');
        return;
      }

      try {
        const res = await fetch('/api/update-welcome', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload),
        });

        if (res.ok) {
          alert('Welcome embed updated successfully!');
        } else {
          const data = await res.json();
          alert('Error: ' + (data.error || 'Unknown error'));
        }
      } catch (err) {
        alert('Network error: ' + err.message);
      }
    });
  </script>
</body>
